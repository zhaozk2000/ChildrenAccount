<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transactions.CategoryManagementActivity">

    <TextView
        android:id="@+id/textView_category_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="儿童"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_category_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账户"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_category_child" />

    <Button
        android:id="@+id/button_category_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="添加条目"
        app:layout_constraintStart_toStartOf="@+id/textView_category_child"
        app:layout_constraintTop_toBottomOf="@+id/textView_category_account" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="点击条目可修改，不能删除条目"
        app:layout_constraintBottom_toBottomOf="@+id/button_category_add"
        app:layout_constraintStart_toEndOf="@+id/button_category_add"
        app:layout_constraintTop_toTopOf="@+id/button_category_add" />

    <ListView
        android:id="@+id/listView_category_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView_category_child"
        app:layout_constraintTop_toBottomOf="@+id/button_category_add" />
</androidx.constraintlayout.widget.ConstraintLayout>