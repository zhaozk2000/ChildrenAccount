<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinner_main_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="选择账户持有人"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_line1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="总余额：0.00元"
        app:layout_constraintEnd_toEndOf="@+id/spinner_main_holder"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinner_main_holder"
        app:layout_constraintTop_toBottomOf="@+id/spinner_main_holder" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_accounts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/spinner_main_holder"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinner_main_holder"
        app:layout_constraintTop_toBottomOf="@+id/textView_line1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="交易"
        app:layout_constraintStart_toStartOf="@+id/spinner_main_holder"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_accounts" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_transactions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView_accounts"
        app:layout_constraintStart_toStartOf="@+id/recyclerView_accounts"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <LinearLayout
        android:id="@+id/linear_layout_shortcuts_outgo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/button_transaction"
        app:layout_constraintEnd_toEndOf="@+id/spinner_main_holder"
        app:layout_constraintStart_toEndOf="@+id/button_transaction"
        app:layout_constraintTop_toTopOf="@+id/button_transaction"></LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_shortcuts_income"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/linear_layout_shortcuts_outgo"
        app:layout_constraintStart_toStartOf="@+id/linear_layout_shortcuts_outgo"
        app:layout_constraintTop_toTopOf="@+id/button"></LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="占位"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/button_transaction"
        app:layout_constraintTop_toBottomOf="@+id/button_transaction" />

</androidx.constraintlayout.widget.ConstraintLayout>