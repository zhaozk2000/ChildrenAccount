<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".automation.AutomationManagementActivity">

    <Button
        android:id="@+id/button_newAutomation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="添加"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_clearAllAutomation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="清空"
        app:layout_constraintStart_toEndOf="@+id/button_newAutomation"
        app:layout_constraintTop_toTopOf="@+id/button_newAutomation" />

    <TextView
        android:id="@+id/textView_automation_management_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="点击条目编辑，自动命令目前执行到20250326"
        app:layout_constraintStart_toStartOf="@+id/button_newAutomation"
        app:layout_constraintTop_toBottomOf="@+id/button_newAutomation" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_table_automation_list"
        android:name="com.zzk.familybank.tablescroll2d.TableScroll2dFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_newAutomation"
        app:layout_constraintTop_toBottomOf="@+id/textView_automation_management_tips" />

    <Button
        android:id="@+id/button_testAllAutomation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="测试"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/button_clearAllAutomation"
        app:layout_constraintTop_toTopOf="@+id/button_newAutomation" />
</androidx.constraintlayout.widget.ConstraintLayout>